{
  "name": "flashcards",
  "version": "1.0.0",
  "description": "Flashcards Application",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test:backend": "cross-env NODE_ENV=test vitest run",
    "test:coverage": "vitest run --coverage",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend"
  },
  "engines": {
    "node": ">=18.18.0 <19.0.0"
  },
  "author": "Piotr Tomaszek",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.1",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "vitest": "^3.2.4"
  }
}
